[colors]
red =           #f00
grn =           #0f0
blu =           #00f

mut_red =       #F76089
# Bright Pink

mut_grn =       #A5FF90
# Mint Green

mut_blu =       #15669B
# Matisse

mut_ylo =       #FFC600
# Supernova

cs_light =      #9EFFFF 
# Ice Cold

cs_midlight =   #0D3A58
# Nile Blue

cs_mid =        #193549
# Elephant

cs_middark =    #122738
# Big Stone

cs_dark =       #15232D
# Shark

# background of the bar
background = ${colors.cs_dark}
# background for highlighted elements
background-alt = ${colors.mut_red}

# primary foreground color
foreground = #FFF
# highlight foreground color
foreground-alt = #FFF


primary = ${colors.mut_blu}
secondary = ${colors.mut_grn}
tertiary = ${colors.mut_red}
alert = ${colors.mut_red}
error = ${colors.mut_ylo}

[global/wm]
margin-top = 3
margin-bottom = 3

[bar/main]
# Set monitor to the MONITOR env var
monitor = ${env:MONITOR}
width = 100%
height = 18
offset-x = 0
offset-y = 0
background = ${colors.background}
foreground = ${colors.foreground}
overline-size = 2
overline-color = ${colors.primary}
underline-size = 2
underline-color = ${colors.tertiary}
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = "mono: size=8;0"
font-1 = "Symbola: size=8;0"

# A more crowded version
# modules-center = i3 
# modules-right = volume wlan eth battery0 battery1 date 
# modules-left = lsb kernel up cpu memory filesystem

# A cleaner version
modules-left = date cpu memory
modules-center = i3 
modules-right = battery0 battery1 volume wlan eth

# Tray config. Uncomment to enable system tray.
tray-position = right
tray-padding = 2

bottom = true
wm-restack = i3
border-bottom-size = 0

[module/kernel]
type = custom/script
exec = uname -r
tail = false
interval = 1024
format-underline = ${colors.primary}

[module/lsb]
type = custom/script
exec = (lsb_release -d | awk {'print $3'})
tail = false
interval = 1024
format-underline = ${colors.primary}

[module/up]
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
label = %output%
format-underline = ${colors.primary}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.foreground-alt}
label-mode-background = ${colors.alert}

label-focused = %name%
label-focused-background = ${colors.primary}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-visible = %name%
label-visible-foreground = 1
label-visible-padding = 1


[module/volume]
type = internal/volume
format-volume = <label-volume>
label-volume = "üîä"
label-volume-foreground = ${root.foreground}
format-muted-foreground = ${colors.foreground}
label-muted = "üîá"
format-volume-underline = ${colors.primary}
format-muted-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 30
mount-0 = /
label-mounted = %free%
label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.primary}

[module/memory]
type = internal/memory
interval = 2
format-prefix =
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.primary}
label = "%gb_free%"

[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix = 
format-prefix-foreground = ${colors.foreground}
format = <ramp-coreload>
format-underline = ${colors.primary}
label = CPU %percentage%%
ramp-coreload-0 = ‚ñÅ
ramp-coreload-1 = ‚ñÇ
ramp-coreload-2 = ‚ñÉ
ramp-coreload-3 = ‚ñÑ
ramp-coreload-4 = ‚ñÖ
ramp-coreload-5 = ‚ñÜ
ramp-coreload-6 = ‚ñá
ramp-coreload-7 = ‚ñà

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
warn-temperature = 87
units = true
format-underline = ${colors.primary}
label = %temperature%
label-warn = %temperature%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5
format-connected = <label-connected>
format-connected-underline = ${colors.primary}
format-disconnected-underline = ${colors.alert}
# label-connected = "üì° %essid%"
# label-disconnected = "üì° DOWN"
label-connected = "üì°"
label-disconnected = "üì°"

[module/eth]
type = internal/network
interface = enp0s25
interval = 5
format-connected-underline = ${colors.primary}
format-connected-foreground-foreground = ${colors.foreground-alt}
format-disconnected-underline = ${colors.alert}
label-disconnected-foreground = ${colors.foreground-alt}
# label-connected = "üñß  %linkspeed%"
# label-disconnected = "üñß DOWN"
label-connected = üñß 
label-disconnected = "üñß"


[module/battery0]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 96 

label-charging = "‚ö° %percentage%"
format-charging = <label-charging>
format-charging-underline = ${colors.primary}

format-discharging-prefix = "üîã "
format-discharging = <label-discharging>
format-discharging-underline = ${colors.secondary}

format-full-prefix = "üîå " 
format-full-underline = ${colors.primary}

[module/battery1]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 96 

label-charging = "‚ö° %percentage%"
format-charging = <label-charging>
format-charging-underline = ${colors.primary}

format-discharging-prefix = "üîã "
format-discharging = <label-discharging>
format-discharging-underline = ${colors.secondary}

format-full-prefix = "üîå " 
format-full-underline = ${colors.primary}

[module/date]
type = internal/date
interval = 5
date = "%A, %d of %B, %Y" 
time = "%H:%M"
format-underline = ${colors.primary}
label = %time% on %date% 

[module/backlight]
type = internal/xbacklight
output = ${env:MONITOR}
label =‚òÄ%percentage%%



